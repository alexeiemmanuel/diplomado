<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrimerProyecto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

    <style name="ThemeActivity" parent="Theme.PrimerProyecto">
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
    </style>

    <!-- Es importante definir el parent y sobre este definimos las propiedades que queremos personalizar -->
    <style name="GreenEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BlueEditTextAnimal" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/md_theme_light_onTertiaryContainer</item>
    </style>

    <style name="BluecardViewAnimal" parent="CardView">
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="Theme.PrimerProyecto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PrimerProyecto.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PrimerProyecto.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>