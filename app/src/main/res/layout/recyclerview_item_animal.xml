<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_animal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_imagen_circular"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:foregroundGravity = "center"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="50dp" >
            <ImageView
                android:id="@+id/iv_imagen_animal_db"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/aguila"
                android:scaleType="centerCrop"
                android:contentDescription="@string/relative_layout_iv_description" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_nombre_animal_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cv_imagen_circular"
            android:textSize="24sp"
            tools:text="@string/relative_layout_iv_description" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>